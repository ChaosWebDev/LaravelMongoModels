root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Markdown and text files should keep trailing spaces (for intentional line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML and JSON config files
[*.{yml,yaml,json}]
indent_size = 2

# JavaScript, TypeScript, SCSS
[*.{js,jsx,ts,tsx,scss,css}]
indent_size = 2

# PHP (PSR-12 / Laravel convention)
[*.php]
indent_size = 4
